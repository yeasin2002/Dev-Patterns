{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.formatOnSave": true,

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "nuxt.config.ts": "tsconfig.json, renovate.json,content.config.ts",
    "package.json": ".editorconfig, README.md, LICENSE, eslint.config.mjs",
    ".env": ".npmrc, .gitignore"
  }
}
