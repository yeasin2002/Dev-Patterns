---
import Logo from "./logo.astro";
---

<nav class="flex justify-between items-center border-b border-gray-800">
  <div class="px-4 py-4">
    <a href="/" class="flex items-center gap-2">
      <Logo />
      <span class="font-bold">DEV-PATTERNS</span>
    </a>
  </div>
  <div class="flex">
    <a
      href="/help"
      class="px-6 py-5 hover:bg-gray-900 border-b-2 border-transparent hover:border-white"
      >help_</a
    >
    <a
      href="/docs"
      class="px-6 py-5 hover:bg-gray-900 border-b-2 border-transparent hover:border-white"
      >docs</a
    >
    <a
      href="/changelogs"
      class="px-6 py-5 hover:bg-gray-900 border-b-2 border-transparent hover:border-white"
      >changelogs</a
    >
    <a
      href="/community"
      class="px-6 py-5 hover:bg-gray-900 border-b-2 border-transparent hover:border-white"
      >community</a
    >
    <a href="https://github.com" class="px-6 py-5 hover:bg-gray-900">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white"
        ><path
          d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
        ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
      >
    </a>
    <button class="px-6 py-5 hover:bg-gray-900">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white"
        ><circle cx="12" cy="12" r="4"></circle><path d="M12 2v2"></path><path
          d="M12 20v2"></path><path d="m4.93 4.93 1.41 1.41"></path><path
          d="m17.66 17.66 1.41 1.41"></path><path d="M2 12h2"></path><path
          d="M20 12h2"></path><path d="m6.34 17.66-1.41 1.41"></path><path
          d="m19.07 4.93-1.41 1.41"></path></svg
