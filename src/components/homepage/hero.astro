---
import Image from "astro/components/Image.astro";
import Spotlight from "../ui/spotlight.astro";
import Codeblocks from "./codeblocks.astro";
import torusIcon from "@/assets/Torus-Knot.svg";
---

<div
  class="container mx-auto px-4 py-16 md:py-24 flex flex-col md:flex-row items-start gap-8 relative"
  style="background: linear-gradient(to right, rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 20px 20px"
>
  <div class="md:w-1/2 space-y-6">
    <div class="flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white"
        ><path
          d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
        ></path><polyline points="14 2 14 8 20 8"></polyline></svg
      >
      <span>Own Your Code</span>
      <span class="bg-gray-800 text-xs px-2 py-1 rounded ml-2">v1.0 is out</span
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white"><path d="m9 18 6-6-6-6"></path></svg
      >
    </div>

    <h1 class="text-4xl md:text-5xl font-bold leading-tight text-white">
      The most comprehensive guide to software development patterns and
      principles.
    </h1>

    <div class="flex items-center gap-2 bg-gray-900 px-3 py-2 rounded-md w-fit">
      <span class="text-gray-400">git:(main)</span>
      <span class="text-gray-400">x</span>
      <span>npm install dev-patterns</span>
      <div class="ml-2 flex gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-red-500"
          ><path
            d="M12 20.94c1.5 0 2.75 1.06 4 1.06 3 0 6-8 6-12.22A4.91 4.91 0 0 0 17 5c-2.22 0-4 1.44-5 2-1-.56-2.78-2-5-2a4.9 4.9 0 0 0-5 4.78C2 14 5 22 8 22c1.25 0 2.5-1.06 4-1.06Z"
          ></path><path d="M10 2c1 .5 2 2 2 5"></path></svg
        >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-white"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </div>
    </div>

    <div class="flex gap-4 pt-4">
      <a
        href="/get-started"
        class="bg-white text-black px-6 py-3 rounded-md font-medium hover:bg-gray-200 transition"
        >GET STARTED</a
      >
      <a
        href="/examples"
        class="border border-gray-700 px-6 py-3 rounded-md font-medium hover:bg-gray-900 transition flex items-center gap-2"
      >
        <span>+</span>
        <span>Browse Examples</span>
      </a>
    </div>
  </div>

  <div class="md:w-1/2 flex justify-center items-center">
    <Image src={torusIcon} alt="Hero Image" class="size-80 spin select-none" />
  </div>

  <Spotlight className=" md:-top-20 md:left-60" fill="white" />
</div>

<style scoped>
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .spin {
    animation: spin 50s linear infinite;
  }
</style>
