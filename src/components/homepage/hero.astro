---
import { Image } from "astro:assets";
import Spotlight from "../ui/spotlight.astro";
// import Codeblocks from "./codeblocks.astro";
import torusIcon from "@/assets/Torus-Knot.svg";
---

<div
  class="container mx-auto px-4 py-16 md:py-24 flex flex-col md:flex-row items-start gap-8 relative"
  style="background: linear-gradient(to right, rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 20px 20px"
>
  <div class="md:w-1/2 space-y-6">
    <div class="flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white"
        ><path
          d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
        ></path><polyline points="14 2 14 8 20 8"></polyline></svg
      >
      <span>Own Your Code</span>
      <span class="bg-gray-800 text-xs px-2 py-1 rounded ml-2">v1.0 is out</span
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white"><path d="m9 18 6-6-6-6"></path></svg
      >
    </div>

    <h1 class="text-4xl md:text-5xl font-bold leading-tight text-white">
      The most comprehensive guide to software development patterns and
      principles.
    </h1>

    <div class="flex gap-4 pt-4">
      <a
        href="/get-started"
        class="bg-white text-black px-6 py-3 rounded-md font-medium hover:bg-gray-200 transition"
        >GET STARTED
      </a>
      <a
        href="/examples"
        class="border border-gray-700 px-6 py-3 rounded-md font-medium hover:bg-gray-900 transition flex items-center gap-2"
      >
        <span>+</span>
        <span>Browse Examples</span>
      </a>
    </div>
  </div>

  <div class="md:w-1/2 flex justify-center items-center">
    <Image src={torusIcon} alt="Hero Image" class="size-80 spin select-none" />
  </div>

  <Spotlight className=" md:-top-20 md:left-60" fill="white" />
</div>

<style scoped>
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .spin {
    animation: spin 50s linear infinite;
  }
</style>
