---
import { type CollectionEntry } from "astro:content";

export interface Props {
  pattern: CollectionEntry<"patterns" | "principles" | "react-patterns">;
  collection: string;
}
const { pattern, collection } = Astro.props;
---

<div class="bg-zinc-900 p-8 rounded-lg">
  <h3 class="text-2xl font-bold mb-4">{pattern.data.title}</h3>
  <p class="text-gray-400 mb-4">
    {pattern.data.description}
  </p>
  <a
    href={`/${collection}/${pattern.slug}`}
    class="text-gray-400 hover:text-white">Learn more</a
  >
</div>
