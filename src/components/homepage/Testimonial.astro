---
export interface TestimonialProps {
  quote: string;
  name: string;
  title: string;
  avatar: string;
  platform?: "twitter" | "linkedin" | "github";
}

const { quote, name, title, avatar, platform = "twitter" } = Astro.props;

// Platform icons
const platformIcons = {
  twitter: `<svg viewBox="0 0 24 24" aria-hidden="true" class="w-5 h-5 fill-white"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path></svg>`,
  linkedin: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>`,
  github: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>`
};
---

<div class="testimonial-card">
  <div class="quote-content">
    <p>"{quote}"</p>
  </div>
  <div class="author-section">
    <div class="author-info">
      <img src={avatar || "/placeholder.svg"} alt={name} class="avatar" />
      <div class="author-details">
        <div class="author-name">{name}</div>
        <div class="author-title">{title}</div>
      </div>
    </div>
    <div class="platform-icon" set:html={platformIcons[platform]} />
  </div>
</div>

<style>
  .testimonial-card {
    background-color: #0a0a0a;
    border: 1px solid #1f1f1f;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .quote-content {
    padding: 24px 24px 16px 24px;
  }

  .quote-content p {
    color: #fff;
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
  }

  .author-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 24px 24px 24px;
    border-top: 1px solid #1f1f1f;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-details {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    color: #fff;
    font-weight: 500;
    font-size: 14px;
  }

  .author-title {
    color: #8f8f8f;
    font-size: 14px;
  }

  .platform-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

