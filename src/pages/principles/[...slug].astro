---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const principles = await getCollection('principles');
  return principles.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <article class="max-w-3xl mx-auto px-4 py-8">
    <a href="/" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">← Back to Home</a>
    <h1 class="text-4xl font-bold mb-4">{entry.data.title}</h1>
    <div class="flex items-center text-sm text-gray-500 mb-8">
      <span>{entry.data.pubDate.toLocaleDateString()}</span>
      <span class="mx-2">•</span>
      <span>{entry.data.author}</span>
    </div>
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</Layout>