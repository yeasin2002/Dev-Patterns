---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const patterns = await getCollection('patterns');
const principles = await getCollection('principles');

// Sort both collections by date
const sortedPatterns = patterns.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const sortedPrinciples = principles.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout>
  <main class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-5xl font-bold mb-12">Blog</h1>
    
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-6">Patterns</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {sortedPatterns.map(post => (
          <a href={`/patterns/${post.slug}`} class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold mb-2">{post.data.title}</h3>
            <p class="text-gray-600 mb-4">{post.data.description}</p>
            <div class="flex items-center text-sm text-gray-500">
              <span>{post.data.pubDate.toLocaleDateString()}</span>
              <span class="mx-2">•</span>
              <span>{post.data.author}</span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-3xl font-semibold mb-6">Principles</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {sortedPrinciples.map(post => (
          <a href={`/principles/${post.slug}`} class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold mb-2">{post.data.title}</h3>
            <p class="text-gray-600 mb-4">{post.data.description}</p>
            <div class="flex items-center text-sm text-gray-500">
              <span>{post.data.pubDate.toLocaleDateString()}</span>
              <span class="mx-2">•</span>
              <span>{post.data.author}</span>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
</Layout>